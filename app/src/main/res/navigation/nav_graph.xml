<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/ExamFragment">


    <fragment
        android:id="@+id/ExamFragment"
        android:name="com.gkreduction.vocabulary.presentation.ui.main.fragment.exam.ExamFragment"
        tools:layout="@layout/fragment_exam">

    </fragment>

    <fragment
        android:id="@+id/ListFragment"
        android:name="com.gkreduction.vocabulary.presentation.ui.main.fragment.list.ListFragment"
        tools:layout="@layout/fragment_list">

    </fragment>


    <fragment
        android:id="@+id/AddFragment"
        android:name="com.gkreduction.vocabulary.presentation.ui.main.fragment.add.AddFragment"
        tools:layout="@layout/fragment_add">

    </fragment>
    <fragment
        android:id="@+id/SettingsFragment"
        android:name="com.gkreduction.vocabulary.presentation.ui.main.fragment.settings.SettingsFragment"
        tools:layout="@layout/fragment_settings">

    </fragment>

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.gkreduction.vocabulary.presentation.ui.main.fragment.FirstFragment"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.gkreduction.vocabulary.presentation.ui.main.fragment.SecondFragment"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>


</navigation>